<metro:MetroWindow x:Class="Clipper.App.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clipper.App"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Progress"
        Height="150" Width="400"
        WindowStartupLocation="CenterOwner"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        ShowCloseButton="False">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="MessageTextBlock" Grid.Row="0" Text="Please wait..." Margin="0,0,0,10"/>
        <ProgressBar x:Name="ProgressBar" Grid.Row="1" Height="20" Minimum="0" Maximum="1" Value="0"/>
        <Button x:Name="CancelButton" Grid.Row="2" Content="Cancel" Width="80" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="CancelButton_Click"/>
    </Grid>
</metro:MetroWindow>
