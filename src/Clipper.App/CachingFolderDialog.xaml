<metro:MetroWindow x:Class="Clipper.App.CachingFolderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clipper.App"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="ClipSage - Caching Folder Setup"
        Height="350" Width="500"
        WindowStartupLocation="CenterScreen"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Caching Folder Setup" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" 
                   Foreground="{DynamicResource MahApps.Brushes.Accent}"/>
        
        <StackPanel Grid.Row="1">
            <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
                <Run FontWeight="Bold">Welcome to ClipSage!</Run>
                <LineBreak/>
                <LineBreak/>
                To enable clipboard data syncing between your devices, please select a folder where ClipSage will store its cache files.
                <LineBreak/>
                <LineBreak/>
                <Run FontWeight="Bold">Recommendation:</Run> Choose a folder within OneDrive, Google Drive, Dropbox, or another cloud storage service to automatically sync your clipboard data across multiple computers.
            </TextBlock>
            
            <TextBlock Text="Caching Folder:" VerticalAlignment="Center" Margin="0,10,0,5"/>
            <DockPanel Margin="0,0,0,20">
                <TextBox x:Name="CachingFolderTextBox" IsReadOnly="True" Margin="0,0,10,0"/>
                <Button Content="Browse..." Click="BrowseButton_Click" Width="80"/>
            </DockPanel>
            
            <CheckBox x:Name="RemindLaterCheckBox" Content="Remind me later" Margin="0,10,0,0"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Skip" Width="80" Margin="0,0,10,0" Click="SkipButton_Click"/>
            <Button Content="Save" Width="80" Click="SaveButton_Click" 
                    Background="{DynamicResource MahApps.Brushes.Accent}" Foreground="White"/>
        </StackPanel>
    </Grid>
</metro:MetroWindow>
