<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
  <Package Name="ClipperMVP"
           Version="$(var.Version)"
           Manufacturer="ClipSage"
           UpgradeCode="6fe30b47-2626-43ff-9384-d324f425a2a2"
           InstallerVersion="200">

    <SummaryInformation Description="ClipperMVP Installer" />

    <Media Id="1" Cabinet="product.cab" EmbedCab="yes" CompressionLevel="high" />

    <StandardDirectory Id="ProgramFiles64Folder">
      <Directory Id="COMPANYFOLDER" Name="ClipSage">
        <Directory Id="INSTALLFOLDER" Name="ClipperMVP">
          <Component Id="MainExecutable">
            <File Source="..\Clipper.App\bin\Debug\net9.0-windows\Clipper.App.exe" />
          </Component>
          <Component Id="CoreLibrary">
            <File Source="..\Clipper.App\bin\Debug\net9.0-windows\Clipper.Core.dll" />
          </Component>
          <!-- Add all required DLLs -->
          <Component Id="ControlzExDll" Guid="*">
            <File Source="..\Clipper.App\bin\Debug\net9.0-windows\ControlzEx.dll" />
          </Component>
          <Component Id="HardcodetNotifyIconDll" Guid="*">
            <File Source="..\Clipper.App\bin\Debug\net9.0-windows\Hardcodet.NotifyIcon.Wpf.dll" />
          </Component>
          <Component Id="LiteDBDll" Guid="*">
            <File Source="..\Clipper.App\bin\Debug\net9.0-windows\LiteDB.dll" />
          </Component>
          <Component Id="MahAppsMetroDll" Guid="*">
            <File Source="..\Clipper.App\bin\Debug\net9.0-windows\MahApps.Metro.dll" />
          </Component>
          <Component Id="MicrosoftXamlBehaviorsDll" Guid="*">
            <File Source="..\Clipper.App\bin\Debug\net9.0-windows\Microsoft.Xaml.Behaviors.dll" />
          </Component>
          <Component Id="NHotkeyDll" Guid="*">
            <File Source="..\Clipper.App\bin\Debug\net9.0-windows\NHotkey.dll" />
          </Component>
          <Component Id="NHotkeyWpfDll" Guid="*">
            <File Source="..\Clipper.App\bin\Debug\net9.0-windows\NHotkey.Wpf.dll" />
          </Component>
          <Component Id="NLogDll" Guid="*">
            <File Source="..\Clipper.App\bin\Debug\net9.0-windows\NLog.dll" />
          </Component>
        </Directory>
      </Directory>
    </StandardDirectory>

    <Feature Id="ProductFeature" Title="ClipperMVP">
      <ComponentRef Id="MainExecutable" />
      <ComponentRef Id="CoreLibrary" />
      <ComponentRef Id="ControlzExDll" />
      <ComponentRef Id="HardcodetNotifyIconDll" />
      <ComponentRef Id="LiteDBDll" />
      <ComponentRef Id="MahAppsMetroDll" />
      <ComponentRef Id="MicrosoftXamlBehaviorsDll" />
      <ComponentRef Id="NHotkeyDll" />
      <ComponentRef Id="NHotkeyWpfDll" />
      <ComponentRef Id="NLogDll" />
    </Feature>
  </Package>
</Wix>
