@page
@model IndexModel
@{
    ViewData["Title"] = "ClipSage - Advanced Clipboard Manager";
}

<div class="container">
    <div class="row py-5">
        <div class="col-md-6 text-center text-md-start">
            <h1 class="display-4 fw-bold">ClipSage</h1>
            <h2 class="fs-3 text-muted">The Intelligent Clipboard Manager</h2>
            <p class="lead my-4">
                Boost your productivity with ClipSage, the advanced clipboard history and snippet manager for Windows.
                Never lose important information again!
            </p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <a href="/download" class="btn btn-primary btn-lg px-4 me-md-2">Download Now</a>
                <a href="/Account/Login" class="btn btn-outline-secondary btn-lg px-4">Sign In</a>
            </div>
        </div>
        <div class="col-md-6 d-flex justify-content-center">
            <img src="/images/clipper-hero.png" class="img-fluid" alt="ClipSage Screenshot" style="max-height: 400px;">
        </div>
    </div>

    <div class="row py-5">
        <div class="col-12 text-center">
            <h2 class="display-6 fw-bold mb-4">Key Features</h2>
        </div>
    </div>

    <div class="row g-4 py-3">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title h5"><i class="bi bi-clipboard-check me-2"></i>Clipboard History</h3>
                    <p class="card-text">Access your complete clipboard history with a simple keyboard shortcut. Never lose copied content again.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title h5"><i class="bi bi-folder me-2"></i>Organized Snippets</h3>
                    <p class="card-text">Save and organize frequently used text snippets for quick access whenever you need them.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title h5"><i class="bi bi-cloud me-2"></i>Cloud Sync</h3>
                    <p class="card-text">Synchronize your clipboard history and snippets across all your devices with secure cloud storage.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 py-3">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title h5"><i class="bi bi-shield-check me-2"></i>Privacy First</h3>
                    <p class="card-text">Your data is encrypted and secure. We prioritize your privacy with end-to-end encryption.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title h5"><i class="bi bi-lightning me-2"></i>Lightning Fast</h3>
                    <p class="card-text">Designed for speed and efficiency, ClipSage won't slow down your workflow.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h3 class="card-title h5"><i class="bi bi-gear me-2"></i>Customizable</h3>
                    <p class="card-text">Tailor ClipSage to your needs with extensive customization options and settings.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row py-5">
        <div class="col-12 text-center">
            <h2 class="display-6 fw-bold mb-4">Ready to Transform Your Workflow?</h2>
            <p class="lead mb-4">Join thousands of professionals who trust ClipSage for their clipboard management needs.</p>
            <a href="/download" class="btn btn-primary btn-lg px-4">Download ClipSage Now</a>
        </div>
    </div>
</div>
