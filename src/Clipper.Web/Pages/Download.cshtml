@page
@model DownloadModel
@{
    ViewData["Title"] = "Download ClipSage";
}

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold">Download ClipSage</h1>
            <p class="lead">Get started with the most intelligent clipboard manager for Windows.</p>
        </div>
    </div>

    <div class="row justify-content-center mb-5">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">
                    <h2 class="h3 mb-4">ClipSage for Windows</h2>
                    <p class="mb-4">Version 1.0.0 | Released: April 27, 2025</p>
                    <a href="/downloads/ClipSage-Setup-1.0.0.exe" class="btn btn-primary btn-lg px-5">
                        <i class="bi bi-download me-2"></i> Download Now
                    </a>
                    <p class="text-muted mt-3">For Windows 10 and Windows 11 (64-bit)</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="h4 mb-4">System Requirements</h2>
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="h5"><i class="bi bi-windows me-2"></i>Operating System</h3>
                            <ul>
                                <li>Windows 10 (64-bit)</li>
                                <li>Windows 11 (64-bit)</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h3 class="h5"><i class="bi bi-cpu me-2"></i>Hardware</h3>
                            <ul>
                                <li>2 GHz dual-core processor or better</li>
                                <li>4 GB RAM minimum</li>
                                <li>100 MB available disk space</li>
                                <li>1280 x 720 screen resolution or higher</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h2 class="h4 mb-3"><i class="bi bi-question-circle me-2"></i>Installation Help</h2>
                    <p>Need help installing ClipSage? Check out our step-by-step installation guide or contact our support team for assistance.</p>
                    <a href="/support/installation" class="btn btn-outline-primary">View Installation Guide</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h2 class="h4 mb-3"><i class="bi bi-clock-history me-2"></i>Previous Versions</h2>
                    <p>Looking for an older version of ClipSage? Access our archive of previous releases.</p>
                    <a href="/downloads/archive" class="btn btn-outline-primary">View Previous Versions</a>
                </div>
            </div>
        </div>
    </div>
</div>
