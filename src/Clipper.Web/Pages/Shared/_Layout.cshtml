<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="ClipSage - The intelligent clipboard manager for Windows. Boost your productivity with advanced clipboard history and snippet management." />
    <title>@ViewData["Title"] - ClipSage</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Clipper.Web.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/images/clipper-logo.png" alt="ClipSage Logo" height="30" class="d-inline-block align-text-top me-2">
                    ClipSage
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Features">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Download">Download</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/About">About</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer bg-dark text-light py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5>ClipSage</h5>
                    <p>The intelligent clipboard manager for Windows. Boost your productivity with advanced clipboard history and snippet management.</p>
                </div>
                <div class="col-md-2 mb-4 mb-md-0">
                    <h5>Product</h5>
                    <ul class="list-unstyled">
                        <li><a class="text-light" asp-page="/Features">Features</a></li>
                        <li><a class="text-light" asp-page="/Download">Download</a></li>
                        <li><a class="text-light" asp-page="/Pricing">Pricing</a></li>
                    </ul>
                </div>
                <div class="col-md-2 mb-4 mb-md-0">
                    <h5>Company</h5>
                    <ul class="list-unstyled">
                        <li><a class="text-light" asp-page="/About">About</a></li>
                        <li><a class="text-light" asp-page="/Contact">Contact</a></li>
                        <li><a class="text-light" asp-page="/Blog">Blog</a></li>
                    </ul>
                </div>
                <div class="col-md-2 mb-4 mb-md-0">
                    <h5>Legal</h5>
                    <ul class="list-unstyled">
                        <li><a class="text-light" asp-page="/Privacy">Privacy Policy</a></li>
                        <li><a class="text-light" asp-page="/Terms">Terms of Use</a></li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <h5>Connect</h5>
                    <div class="d-flex gap-3 fs-4">
                        <a href="#" class="text-light"><i class="bi bi-twitter-x"></i></a>
                        <a href="#" class="text-light"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-light"><i class="bi bi-linkedin"></i></a>
                        <a href="#" class="text-light"><i class="bi bi-github"></i></a>
                    </div>
                </div>
            </div>
            <hr class="mt-4 mb-3 border-secondary" />
            <div class="row">
                <div class="col-12 text-center">
                    <p class="mb-0">&copy; @DateTime.Now.Year - ClipSage - All rights reserved</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
