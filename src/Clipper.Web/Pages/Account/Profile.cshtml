@page
@model ProfileModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold">My Profile</h1>
            <p class="lead">Manage your account information and preferences.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="list-group">
                <a href="/Account/Profile" class="list-group-item list-group-item-action active">
                    <i class="bi bi-person me-2"></i> Profile
                </a>
                <a href="/Account/Subscription" class="list-group-item list-group-item-action">
                    <i class="bi bi-credit-card me-2"></i> Subscription
                </a>
                <a href="/Account/Devices" class="list-group-item list-group-item-action">
                    <i class="bi bi-laptop me-2"></i> Devices
                </a>
                <a href="/Account/Security" class="list-group-item list-group-item-action">
                    <i class="bi bi-shield-lock me-2"></i> Security
                </a>
                <a href="/Account/DeleteAccount" class="list-group-item list-group-item-action text-danger">
                    <i class="bi bi-trash me-2"></i> Delete Account
                </a>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="h4 mb-4">Personal Information</h2>
                    
                    <form method="post">
                        <div class="mb-3">
                            <label for="name" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="name" name="Name" value="@Model.Name">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" readonly>
                            <div class="form-text">Your email address cannot be changed. It is used for account identification.</div>
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone Number (Optional)</label>
                            <input type="tel" class="form-control" id="phone" name="Phone" value="@Model.Phone">
                        </div>
                        
                        <h3 class="h5 mt-4 mb-3">Preferences</h3>
                        
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="emailNotifications" name="EmailNotifications" checked="@Model.EmailNotifications">
                            <label class="form-check-label" for="emailNotifications">Receive email notifications about product updates</label>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="marketingEmails" name="MarketingEmails" checked="@Model.MarketingEmails">
                            <label class="form-check-label" for="marketingEmails">Receive marketing emails about special offers</label>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
