@{
    ViewData["Title"] = "Sign In";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h1 class="h3 mb-4 text-center">Sign in to ClipSage</h1>
                    
                    <div class="text-center mb-4">
                        <p class="text-muted">Choose your preferred sign-in method</p>
                    </div>
                    
                    <div class="d-grid gap-3">
                        <form asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                            <button type="submit" class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center" name="provider" value="Google">
                                <i class="bi bi-google me-2"></i> Sign in with Google
                            </button>
                        </form>
                        
                        <form asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                            <button type="submit" class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center" name="provider" value="Microsoft">
                                <i class="bi bi-microsoft me-2"></i> Sign in with Microsoft
                            </button>
                        </form>
                        
                        <form asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                            <button type="submit" class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center" name="provider" value="Facebook">
                                <i class="bi bi-facebook me-2"></i> Sign in with Facebook
                            </button>
                        </form>
                    </div>
                    
                    <div class="mt-4 text-center">
                        <p class="text-muted small">By signing in, you agree to our <a href="/Terms">Terms of Use</a> and <a href="/Privacy">Privacy Policy</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
