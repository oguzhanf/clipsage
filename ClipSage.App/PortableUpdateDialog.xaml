<?xml version="1.0" encoding="utf-8"?>
<metro:MetroWindow x:Class="ClipSage.App.PortableUpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipSage.App"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="ClipSage Update"
        MinHeight="400" MinWidth="550"
        Width="600" Height="450"
        WindowStartupLocation="CenterOwner"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Checking for Updates" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Progress Bar -->
        <ProgressBar x:Name="ProgressBar" Grid.Row="1" Height="20" Margin="0,0,0,15" IsIndeterminate="True"/>

        <!-- Update Info -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock x:Name="StatusTextBlock" Text="Checking for updates..." TextWrapping="Wrap"/>
            <TextBlock x:Name="VersionTextBlock" Text="" TextWrapping="Wrap" Margin="0,5,0,0" Visibility="Collapsed"/>
            <TextBlock x:Name="ReleaseDateTextBlock" Text="" TextWrapping="Wrap" Margin="0,5,0,0" Visibility="Collapsed"/>
        </StackPanel>

        <!-- Log/Status Area -->
        <Border Grid.Row="3" BorderBrush="{DynamicResource MahApps.Brushes.Gray3}" BorderThickness="1" Margin="0,0,0,15">
            <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="LogTextBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Background="Transparent"
                         BorderThickness="0"
                         FontFamily="Consolas"
                         Padding="5"/>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <CheckBox x:Name="AutoUpdateCheckBox" 
                      Content="Check for updates automatically" 
                      IsChecked="True" 
                      VerticalAlignment="Center"
                      Margin="0,0,15,0"/>
            <Button x:Name="UpdateButton" 
                    Content="Update Now" 
                    Width="120" 
                    Margin="0,0,10,0" 
                    Click="UpdateButton_Click"
                    IsEnabled="False"/>
            <Button x:Name="CloseButton" 
                    Content="Close" 
                    Width="80" 
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</metro:MetroWindow>
