<metro:MetroWindow x:Class="ClipSage.App.UpdateCheckDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipSage.App"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Check for Updates"
        MinHeight="400" MinWidth="550"
        Width="600" Height="450"
        WindowStartupLocation="CenterOwner"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        ShowInTaskbar="False">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="200"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Checking for Updates" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Progress Bar -->
        <ProgressBar x:Name="ProgressBar" Grid.Row="1" Height="20" Margin="0,0,0,15" IsIndeterminate="True"/>

        <!-- Log/Status Area -->
        <Border Grid.Row="2" BorderBrush="{DynamicResource MahApps.Brushes.Gray3}" BorderThickness="1" Margin="0,0,0,15">
            <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="LogTextBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Background="Transparent"
                         BorderThickness="0"
                         FontFamily="Consolas"
                         Padding="5"/>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <Grid Grid.Row="3" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="CloseButton" Grid.Column="1" Content="Close" Width="100" Height="35" Margin="0,0,10,0" Click="CloseButton_Click"/>
            <Button x:Name="DownloadButton" Grid.Column="2" Content="Download" Width="100" Height="35" IsEnabled="False" Click="DownloadButton_Click"/>
        </Grid>
    </Grid>
</metro:MetroWindow>
